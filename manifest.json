{
  "name": "Yet Another Hints Extension",
  "short_name": "YAHE",
  "manifest_version": 3,
  "description": "A simple hit-a-hint extension",
  "options_ui": {
    "page": "options/index.html",
    "open_in_tab": false
  },
  "icons": {
    "16": "icons/icon16.png",
    "48": "icons/icon48.png",
    "128": "icons/icon128.png"
  },
  "host_permissions": ["*://*/*"],
  "permissions": ["storage"],
  "content_scripts": [
    {
      "match_about_blank": true,
      "matches": ["http://*/*", "https://*/*", "file://*/*"],
      "css": ["yahe.css"],
      "js": ["yahe.js"],
      "run_at": "document_end",
      "all_frames": true
    }
  ]
}
